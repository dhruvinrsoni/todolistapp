{
  "name": "my-todo-app",
  "version": "0.2.0",
  "author": "Dhruvin Soni <@dhruvinrsoni>",
  "description": "This my-todo-app is Android Installable and available with Windows Installation distributions.",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "bootstrap": "^5.1.0",
    "electron-is-dev": "^2.0.0",
    "firebase-functions": "^3.6.1",
    "history": "^4.10.1",
    "lodash": "^4.17.15",
    "node-uuid": "^1.4.8",
    "react": "^16.13.1",
    "react-bootstrap": "^2.0.0-beta.6",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.1",
    "redux": "^4.0.5"
  },
  "scripts": {
    "prestart": "set HTTPS=true && set SSL_CRT_FILE=./.cert/cert.pem && set SSL_KEY_FILE=./.cert/key.pem",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-package": "./node_modules/.bin/electron-builder -c.extraMetadata.main=build/start-electron.js",
    "preelectron-package": "npm run build"
  },
  "build": {
    "appId": "com.loyno-mathcs.dhruvinrsoni.weatherstation.wotdevice",
	"copyright": "Copyright Â© 2019 ${author}",
    "files": [
      "build/**/*",
	  "./public/**/*",
      "node_modules/**/*"
    ],
	"win": {
		"icon": "./public/favicon.ico"
	},
  "directories": {
      "buildResources": "public"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "electron": "^14.0.1",
    "electron-builder": "^22.11.7",
    "wait-on": "^6.0.0"
  }
}
